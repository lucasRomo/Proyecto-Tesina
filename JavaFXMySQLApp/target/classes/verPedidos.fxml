<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.VerPedidosController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label styleClass="titulo-principal" text="Ver y Editar Pedidos">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-panel">
            <Label text="Filtrar por Empleado Asignado:" textFill="#fff8f8">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <ComboBox fx:id="empleadoFilterComboBox" promptText="Seleccionar Empleado" HBox.hgrow="ALWAYS" />

            <Label text="Estado:" textFill="#fff8f8" />
            <ComboBox fx:id="estadoFilterComboBox" promptText="Todos los Estados" HBox.hgrow="ALWAYS" />

            <Label text="Tipo Pago:" textFill="#fff8f8" />
            <ComboBox fx:id="metodoPagoFilterComboBox" promptText="Todos los Tipos" HBox.hgrow="ALWAYS" />
        </HBox>

        <TableView fx:id="pedidosTable" editable="true" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idPedidoColumn" text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="idPedido" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="clienteColumn" text="Cliente">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombreCliente" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="empleadoColumn" text="Empleado">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombreEmpleado" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="contactoClienteColumn" resizable="false" text="Contacto" />

                <TableColumn fx:id="estadoColumn" text="Estado">
                    <cellValueFactory>
                        <PropertyValueFactory property="estado" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="tipoPagoColumn" text="Tipo Pago">
                    <cellValueFactory>
                        <PropertyValueFactory property="tipoPago" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="montoTotalColumn" text="Monto Total">
                    <cellValueFactory>
                        <PropertyValueFactory property="montoTotal" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="montoEntregadoColumn" text="Monto Entregado">
                    <cellValueFactory>
                        <PropertyValueFactory property="montoEntregado" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="fechaCreacionColumn" text="Fecha de CreaciÃ³n">
                    <cellValueFactory>
                        <PropertyValueFactory property="fechaCreacion" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="instruccionesColumn" text="Instrucciones">
                    <cellValueFactory>
                        <PropertyValueFactory property="instrucciones" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="comprobantePagoColumn" text="Comprobante Pago" />

                <TableColumn fx:id="ticketColumn" styleClass="columna-boton-direccion" text="Detallar/Ticket" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleGuardarCambios" text="Guardar Cambios" />
            <Button onAction="#handleLimpiarFiltros" text="Limpiar Filtros" />
            <Button onAction="#handleVolver" styleClass="button-volver" text="Volver" />
        </HBox>
    </VBox>

    <Button fx:id="helpButton" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <graphic>
            <Text fill="#007bff" text="  ?" wrappingWidth="26.8837890625">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>

</AnchorPane>
