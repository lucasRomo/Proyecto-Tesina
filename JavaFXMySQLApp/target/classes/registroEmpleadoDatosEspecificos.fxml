<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="app.controller.EmpleadoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Datos del Empleado">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label fx:id="nombrePersonaLabel" text="Nombre Apellido" style="-fx-font-weight: bold;" />

    <Label text="Datos de Usuario" style="-fx-font-weight: bold;" />
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40" />
            <ColumnConstraints percentWidth="60" />
        </columnConstraints>
        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usuarioField" promptText="Usuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="contraseniaField" promptText="Contraseña" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="guardarEmpleadoButton" text="Guardar" onAction="#handleGuardarEmpleado" />
</VBox>