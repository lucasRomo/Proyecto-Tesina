<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.PedidosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="GestiÃ³n de Pedidos">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Buscar/Filtrar:" />
                <TextField fx:id="filterField" promptText="Buscar por ID, Estado o Cliente" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <TableView fx:id="pedidosTableView" prefHeight="400.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idPedidoColumn" prefWidth="75.0" text="ID Pedido" />
                <TableColumn fx:id="fechaColumn" prefWidth="120.0" text="Fecha" />
                <TableColumn fx:id="estadoColumn" prefWidth="150.0" text="Estado" />
                <TableColumn fx:id="idClienteColumn" prefWidth="100.0" text="ID Cliente" />
                <TableColumn fx:id="montoTotalColumn" prefWidth="100.0" text="Monto Total" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="crearPedidoButton" mnemonicParsing="false" onAction="#handleCrearPedido" text="Crear Pedido" />
                <Button fx:id="verPedidosButton" mnemonicParsing="false" onAction="#handleVerPedidos" text="Ver Pedidos Existentes" />
                <Button fx:id="modificarPedidoButton" mnemonicParsing="false" onAction="#handleModificarPedido" text="Modificar Pedido" />
                <Button fx:id="asignarPedidoButton" mnemonicParsing="false" onAction="#handleAsignarPedido" text="Asignar Pedido" />
                <Button fx:id="registrarPagoButton" mnemonicParsing="false" onAction="#handleRegistrarPago" text="Registrar Pagos" />
            </children>
        </HBox>
    </children>
</VBox>