<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.PedidosController">


    <Label text="Gestión de Pedidos">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleCrearPedido" prefWidth="150" text="Crear Pedido" />
        <Button onAction="#handleModificarPedido" prefWidth="150" text="Modificar Pedido" />
        <Button onAction="#handleAsignarPedido" prefWidth="150" text="Asignar Pedido" />
        <Button onAction="#handleRegistrarPago" prefWidth="150" text="Registrar Pago" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Buscar/Filtrar:" />
        <TextField fx:id="filterField" promptText="Buscar por ID, estado o cliente" HBox.hgrow="ALWAYS" />
    </HBox>

    <TableView fx:id="pedidosTableView" editable="true" layoutX="24.0" layoutY="71.0" prefHeight="190.0" prefWidth="1273.0">
        <columns>
            <TableColumn fx:id="idPedidoColumn" prefWidth="75.0" text="ID Pedido" />
            <TableColumn fx:id="idClienteColumn" prefWidth="100.0" text="ID Cliente" />
            <TableColumn fx:id="fechaCreacionColumn" prefWidth="120.0" text="Fecha Creación" />
            <TableColumn fx:id="fechaEntregaEstimadaColumn" prefWidth="150.0" text="Fecha Entrega Estimada" />
            <TableColumn fx:id="fechaFinalizacionColumn" prefWidth="150.0" text="Fecha Finalización" />
            <TableColumn fx:id="estadoColumn" prefWidth="150.0" text="Estado" />
            <TableColumn fx:id="montoTotalColumn" prefWidth="150.0" text="Monto Total" />
            <TableColumn fx:id="montoEntregadoColumn" prefWidth="150.0" text="Monto Entregado" />
            <TableColumn fx:id="instruccionesColumn" prefWidth="200.0" text="Instrucciones" />
        </columns>
    </TableView>


    <HBox alignment="BOTTOM_CENTER" spacing="10.0">
        <Button onAction="#handleVerPedidos" prefWidth="150" text="Ver todos los pedidos" />
    </HBox>
</VBox>