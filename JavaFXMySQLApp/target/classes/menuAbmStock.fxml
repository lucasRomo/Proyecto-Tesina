<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1000.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MenuController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@imagenes/Logo_no_bg.png" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Menu Stock" styleClass="titulo-principal">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="10.0" prefWidth="250.0" maxWidth="250.0">
            <Button styleClass="button" onAction="#handleProveedor" prefWidth="200.0" text="Proveedores" />
            <Button styleClass="button" onAction="#handleStock" prefWidth="200.0" text="Stock de insumos" />
            <!-- ESTE ES EL NUEVO BOTÃ“N PARA CREAR PRODUCTOS -->
            <Button styleClass="button" onAction="#handleCrearProducto" prefWidth="200.0" text="Productos" />
        </VBox>

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>

    <Button fx:id="volverButton" mnemonicParsing="false" onAction="#handleVolverButtonStock" text="Volver"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />

</AnchorPane>
