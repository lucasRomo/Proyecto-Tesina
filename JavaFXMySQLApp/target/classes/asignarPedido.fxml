<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.AsignarPedidoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Asignar Pedido a Empleado">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Seleccionar Empleado:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="empleadoComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleAsignar" prefWidth="100" text="Asignar" />
        <Button onAction="#handleCancelar" prefWidth="100" text="Cancelar" />
    </HBox>
</VBox>