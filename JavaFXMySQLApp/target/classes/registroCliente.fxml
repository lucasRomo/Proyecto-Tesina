<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroController">
    <stylesheets>
        <URL value="@styleRegistro.css" />
    </stylesheets>

    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
        </padding>

        <Label styleClass="titulo-principal" text="Registro de Nuevo Cliente">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>

        <HBox alignment="TOP_CENTER" spacing="30.0">
            <VBox spacing="10.0">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Datos Personales" />
                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nombreField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="apellidoField" promptText="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="1" /> <Label text="Tipo de Documento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="tipoDocumentoComboBox" prefWidth="200" promptText="Seleccione tipo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="N° Documento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="numeroDocumentoField" promptText="Número de Documento" GridPane.columnIndex="1" GridPane.rowIndex="3" /> <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="emailField" promptText="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <VBox spacing="10.0">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Datos de Dirección" />
                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    <Label text="Calle:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="calleField" promptText="Calle" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="numeroField" promptText="Número" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Piso:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="pisoField" promptText="Piso (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="departamentoField" promptText="Departamento (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label text="Código Postal:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="codigoPostalField" promptText="Código Postal" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="ciudadField" promptText="Ciudad (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <TextField fx:id="provinciaField" promptText="Provincia (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <TextField fx:id="paisField" promptText="País (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            <Button fx:id="siguienteButton" onAction="#handleSiguienteButton" prefHeight="45.0" prefWidth="165.0" text="Siguiente" />
            <Button onAction="#handleVolverButton" prefHeight="45.0" prefWidth="165.0" styleClass="cancel-button" text="Volver" />
        </HBox>
    </VBox>

    <Button fx:id="helpButton" prefHeight="39.0" prefWidth="40.0" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0" />
      <Text fill="#007bff" layoutX="595.0" layoutY="56.0" text="  ?" wrappingWidth="40.0">
          <font>
              <Font name="System Bold" size="18.0" />
          </font>
      </Text>

</AnchorPane>
