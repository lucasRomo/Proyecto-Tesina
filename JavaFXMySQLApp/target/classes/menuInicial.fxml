<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Bienvenido Empleado">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Button fx:id="pedidosButton" onAction="#handlePedidosButton" prefWidth="200.0" text="Pedidos" />
    <Button fx:id="clientesButton" onAction="#handleClientesButton" prefWidth="200.0" text="Clientes" />
    <Button fx:id="stockButton" onAction="#handleStockButton" prefWidth="200.0" text="Stock" />
    <Button fx:id="adminButton" onAction="#handleAdminButton" prefWidth="200.0" text="Admin" />

</VBox>
