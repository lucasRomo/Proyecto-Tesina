<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.HistorialActividadController">
    <center>
        <VBox spacing="10.0">
            <children>
                <HBox alignment="CENTER">
                    <Label style="-fx-text-fill: white;" text="Historial de Actividad del Sistema">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Label>
                </HBox>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="helpButton" onAction="#handleHelpButton" prefHeight="28.0" prefWidth="32.0" styleClass="help-button">
                            <graphic>
                                <Text fill="#007bff" text="?">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Text>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Filtrar por Empleado:" />
                    <ChoiceBox fx:id="cmbFiltroUsuario" prefWidth="200.0" />
                </HBox>
                <TableView fx:id="historialTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="fechaModificacionColumn" text="Fecha y Hora" />
                        <TableColumn fx:id="nombreUsuarioColumn" text="Usuario Responsable" />
                        <TableColumn fx:id="tablaAfectadaColumn" text="Tabla Afectada" />
                        <TableColumn fx:id="columnaAfectadaColumn" text="Columna Afectada" />
                        <TableColumn fx:id="idRegistroModificadoColumn" text="ID Registro Modificado" />
                        <TableColumn fx:id="datoPrevioColumn" text="Dato Previo" />
                        <TableColumn fx:id="datoModificadoColumn" text="Dato Modificado" />
                    </columns>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Button onAction="#handleVolverButtonHistorial" styleClass="button-volver" text="Volver" />
            </children>
            <padding>
                <Insets bottom="10.0" right="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
