<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroProveedorController">
    <stylesheets>
        <URL value="@styleRegistro.css" />
    </stylesheets>
    <VBox layoutX="25.0" layoutY="25.0" prefHeight="650.0" prefWidth="450.0" spacing="8.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <Label styleClass="titulo-principal" text="Registro de Proveedor">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <Label text="Datos del Proveedor" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <TextField fx:id="nombreField" promptText="Nombre del Proveedor" />
        <TextField fx:id="contactoField" promptText="Persona de Contacto" />
        <TextField fx:id="mailField" promptText="Correo Electrónico" />

        <Separator>
            <VBox.margin>
                <Insets top="5" right="0" bottom="5" left="0" />
            </VBox.margin>
        </Separator>

        <Label text="Dirección" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>
            <TextField fx:id="calleField" promptText="Calle" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="numeroField" promptText="Número" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <TextField fx:id="pisoField" promptText="Piso (opcional)" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="departamentoField" promptText="Departamento (opcional)" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <TextField fx:id="codigoPostalField" promptText="Código Postal" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="ciudadField" promptText="Ciudad" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <TextField fx:id="provinciaField" promptText="Provincia" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="paisField" promptText="País (opcional)" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>

        <Separator>
            <VBox.margin>
                <Insets top="5" right="0" bottom="5" left="0" />
            </VBox.margin>
        </Separator>

        <Label text="Tipo de Proveedor" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ChoiceBox fx:id="tipoProveedorChoiceBox" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleRegistrarTipoProveedorButton" text="Nuevo Tipo" prefHeight="30.0" />
        </HBox>

        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
            <Button onAction="#handleRegistrarProveedor" text="Registrar" styleClass="save-button" prefHeight="40.0" prefWidth="120.0" />
            <Button onAction="#handleCancelar" text="Cancelar" styleClass="cancel-button" prefHeight="40.0" prefWidth="120.0" />
        </HBox>
    </VBox>

    <Button fx:id="helpButton" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <graphic>
            <Text fill="#007bff" text="  ?" wrappingWidth="27.8837890625">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>

</AnchorPane>