<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ProductoController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Crear Nuevo Producto" styleClass="titulo-principal">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Formulario de Creación de Producto -->
        <GridPane hgap="15.0" vgap="15.0" alignment="CENTER">
            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
            </padding>

            <!-- Fila 1: Nombre del Producto (OBLIGATORIO) -->
            <Label text="Nombre del Producto (*):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="txtNombre" prefWidth="300.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <!-- Fila 2: Descripción (Opcional) -->
            <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea fx:id="txtDescripcion" prefWidth="300.0" prefHeight="80.0" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <!-- Fila 3: Precio (OBLIGATORIO) -->
            <Label text="Precio (*):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="txtPrecio" prefWidth="300.0" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Solo números y punto decimal (ej: 12.50)" />

            <!-- Fila 4: Stock (Opcional) -->
            <Label text="Stock (Cantidad):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="txtStock" prefWidth="300.0" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Solo números enteros. Si se deja vacío, es 0." />

            <!-- Fila 5: Categoría (Opcional - ComboBox) -->
            <Label text="Categoría (Opcional):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ComboBox fx:id="cmbCategoria" prefWidth="300.0" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Seleccione una categoría (o déjelo vacío)" />
        </GridPane>

        <!-- Mensaje de Error (Inicialmente oculto) -->
        <Label fx:id="lblMensajeError" text="" styleClass="label-error" wrapText="true" minHeight="30.0" />

        <!-- Contenedor de Botones -->
        <HBox alignment="CENTER" spacing="30.0">
            <Button text="Guardar Producto" onAction="#handleGuardarProducto" styleClass="button-success" />
            <Button text="Cancelar/Volver" onAction="#handleVolver" styleClass="button" />
        </HBox>

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</AnchorPane>