<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="app.controller.RegistroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Registro de Nuevo Cliente">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Datos Personales" style="-fx-font-weight: bold;" />
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40" />
            <ColumnConstraints percentWidth="60" />
        </columnConstraints>
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreField" promptText="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Apellido:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="apellidoField" promptText="Apellido" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tipo de Documento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="tipoDocumentoComboBox" prefWidth="200" promptText="Seleccione tipo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="N° Documento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="numeroDocumentoField" promptText="Número de Documento" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="email@example.com" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Datos de Dirección" style="-fx-font-weight: bold;" />
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40" />
            <ColumnConstraints percentWidth="60" />
        </columnConstraints>
        <Label text="Calle:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="calleField" promptText="Calle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Número:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="numeroField" promptText="Número" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Piso:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="pisoField" promptText="Piso (opcional)" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Departamento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="departamentoField" promptText="Departamento (opcional)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Código Postal:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="codigoPostalField" promptText="Código Postal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Ciudad:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="ciudadField" promptText="Ciudad (opcional)" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Provincia:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="provinciaField" promptText="Provincia (opcional)" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="País:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="paisField" promptText="País (opcional)" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="siguienteButton" text="Siguiente" onAction="#handleSiguienteButton" />
</VBox>