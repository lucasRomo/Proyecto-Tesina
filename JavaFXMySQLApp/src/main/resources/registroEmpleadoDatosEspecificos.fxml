            <TextField fx:id="usuarioField" promptText="Ingrese un nombre de Usuario" maxWidth="300.0"/>

            <Label text="Contraseña:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

            <StackPane maxWidth="300.0">
                <PasswordField fx:id="contraseniaField" promptText="Ingrese una Contraseña" maxWidth="300.0" visible="true"/>

