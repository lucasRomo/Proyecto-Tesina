            <DatePicker fx:id="fechaContratacionPicker" maxWidth="300.0" promptText="Seleccione la fecha" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Cargo:" />
            <TextField fx:id="cargoField" maxWidth="300.0" promptText="Ingrese el cargo del empleado" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Salario:" />
            <TextField fx:id="salarioField" maxWidth="300.0" promptText="Ingrese el salario" />

