            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Persona:" />
            <HBox alignment="CENTER" spacing="5.0">
                <Label fx:id="nombrePersonaLabel" style="-fx-font-size: 14px;" />
            </HBox>

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Usuario:" />
            <TextField fx:id="usuarioField" maxWidth="300.0" promptText="Ingrese un nombre de Usuario" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Contraseña:" />

            <StackPane maxWidth="300.0">
                <PasswordField fx:id="contraseniaField" maxWidth="300.0" promptText="Ingrese una Contraseña" visible="true" />

