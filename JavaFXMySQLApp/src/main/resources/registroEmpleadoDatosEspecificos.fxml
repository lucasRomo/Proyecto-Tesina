            <DatePicker fx:id="fechaContratacionPicker" promptText="Seleccione la fecha" maxWidth="300.0"/>

            <Label text="Cargo:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="cargoField" promptText="Ingrese el cargo del empleado" maxWidth="300.0"/>

            <Label text="Salario:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="salarioField" promptText="Ingrese el salario" maxWidth="300.0"/>

