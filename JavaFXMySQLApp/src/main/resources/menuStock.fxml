<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="469.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.StockController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <Label layoutX="781.0" layoutY="27.0" text="Menú de Stock" styleClass="titulo-principal">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <TableView fx:id="insumosTableView" editable="true" layoutX="249.0" layoutY="79.0" prefHeight="274.0" prefWidth="992.0">
        <columns>
            <TableColumn fx:id="idInsumoColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nombreInsumoColumn" prefWidth="150.0" text="Nombre Insumo" />
            <TableColumn fx:id="descripcionColumn" prefWidth="250.0" text="Descripción" />
            <TableColumn fx:id="stockMinimoColumn" prefWidth="100.0" text="Stock Mínimo" />
            <TableColumn fx:id="stockActualColumn" prefWidth="100.0" text="Stock Actual" />
            <TableColumn fx:id="estadoColumn" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="idTipoProveedorColumn" prefWidth="120.0" text="Tipo Proveedor" />
            <TableColumn fx:id="accionColumn" prefWidth="120.0" text="Acción" />
        </columns>
    </TableView>
    <TextField fx:id="filterField" layoutX="144.0" layoutY="387.0" prefHeight="25.0" prefWidth="319.0" promptText="Buscar por nombre..." />

    <Label layoutX="473.0" layoutY="391.0" text="Estado:" styleClass="label-blanco">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <ChoiceBox fx:id="estadoChoiceBox" layoutX="523.0" layoutY="387.0" prefWidth="150.0" />


    <Button fx:id="modificarInsumoButton" layoutX="865.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleModificarInsumoButton" text="Modificar Insumo" />
    <Button fx:id="registrarInsumoButton" layoutX="700.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleRegistrarInsumoButton" text="Registrar Insumo" />
    <Button fx:id="refreshButton" layoutX="1005.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleRefreshButton" text="Refrescar" />
    <Button fx:id="volverButton" layoutX="1090.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleVolverButton" text="Volver" />
</AnchorPane>
