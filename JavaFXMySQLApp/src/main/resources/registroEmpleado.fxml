<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroEmpleadoController">
    <stylesheets>
        <URL value="@styleRegistro.css" />
    </stylesheets>

    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label styleClass="titulo-principal" text="Registro de Nuevo Empleado">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="TOP_CENTER" spacing="15.0">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>

            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Datos Personales" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <Label style="-fx-font-size: 14px;" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nombreField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label style="-fx-font-size: 14px;" text="Apellido:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="apellidoField" promptText="Apellido" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label style="-fx-font-size: 14px;" text="Tipo Doc:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="tipoDocumentoComboBox" prefWidth="200" promptText="Seleccione tipo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label style="-fx-font-size: 14px;" text="N° Documento:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="numeroDocumentoField" promptText="Número de Documento" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label style="-fx-font-size: 14px;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" promptText="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label style="-fx-font-size: 14px;" text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <rowConstraints>
                    <RowConstraints prefHeight="35.0" />
                    <RowConstraints prefHeight="35.0" />
                    <RowConstraints prefHeight="35.0" />
                </rowConstraints>
            </GridPane>

            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Datos de Dirección" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <Label style="-fx-font-size: 14px;" text="Calle:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="calleField" promptText="Calle" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label style="-fx-font-size: 14px;" text="Número:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="numeroField" promptText="Número" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label style="-fx-font-size: 14px;" text="Piso:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="pisoField" promptText="Piso (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label style="-fx-font-size: 14px;" text="Departamento:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="departamentoField" promptText="Departamento (opcional)" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label style="-fx-font-size: 14px;" text="Cód. Postal:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="codigoPostalField" promptText="Código Postal" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label style="-fx-font-size: 14px;" text="Ciudad:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="ciudadField" promptText="Ciudad (opcional)" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label style="-fx-font-size: 14px;" text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="provinciaField" promptText="Provincia (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label style="-fx-font-size: 14px;" text="País:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="paisField" promptText="País (opcional)" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                <rowConstraints>
                    <RowConstraints prefHeight="35.0" />
                    <RowConstraints prefHeight="35.0" />
                    <RowConstraints prefHeight="35.0" />
                    <RowConstraints prefHeight="35.0" />
                </rowConstraints>
            </GridPane>
        </VBox>
        <HBox alignment="CENTER" spacing="10.0">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
            <children>
                <Button fx:id="volverButton" onAction="#handleVolverButton" styleClass="cancel-button" text="Volver" />
                <Button fx:id="siguienteButton" onAction="#handleSiguienteButton" text="Siguiente" />
            </children>
        </HBox>
    </VBox>

    <Button fx:id="helpButton" onAction="#handleHelpButton" prefHeight="28.0" prefWidth="28.0" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <graphic>
            <Text fill="#007bff" text="?">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>

</AnchorPane>
