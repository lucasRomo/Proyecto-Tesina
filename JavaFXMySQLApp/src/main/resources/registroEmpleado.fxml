<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroEmpleadoController">
    <stylesheets>
        <URL value="@styleRegistro.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="titulo-principal" text="Registro de Nuevo Empleado">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- El tamaño de la fuente para este label ahora es más grande -->
    <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Datos Personales" />
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40" />
            <ColumnConstraints percentWidth="60" />
        </columnConstraints>
        <!-- Se ha agregado el estilo para aumentar el tamaño de la fuente -->
        <Label prefHeight="35.0" prefWidth="156.0" style="-fx-font-size: 24px;" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nombreField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-size: 24px;" text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="apellidoField" promptText="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label prefHeight="35.0" prefWidth="259.0" style="-fx-font-size: 24px;" text="Tipo de Documento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="tipoDocumentoComboBox" prefWidth="200" promptText="Seleccione tipo" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label prefHeight="35.0" prefWidth="206.0" style="-fx-font-size: 24px;" text="N° Documento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="numeroDocumentoField" promptText="Número de Documento" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label style="-fx-font-size: 24px;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="emailField" promptText="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label style="-fx-font-size: 24px;" text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- El tamaño de la fuente para este label ahora es más grande -->
    <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Datos de Dirección" />
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40" />
            <ColumnConstraints percentWidth="60" />
        </columnConstraints>
        <!-- Se ha agregado el estilo para aumentar el tamaño de la fuente -->
        <Label style="-fx-font-size: 24px;" text="Calle:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="calleField" promptText="Calle" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-size: 24px;" text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="numeroField" promptText="Número" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-size: 24px;" text="Piso:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="pisoField" promptText="Piso (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label style="-fx-font-size: 24px;" text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="departamentoField" promptText="Departamento (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label style="-fx-font-size: 24px;" text="Código Postal:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="codigoPostalField" promptText="Código Postal" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label style="-fx-font-size: 24px;" text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="ciudadField" promptText="Ciudad (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label style="-fx-font-size: 24px;" text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="provinciaField" promptText="Provincia (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label style="-fx-font-size: 24px;" text="País:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="paisField" promptText="País (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
    <Button fx:id="volverButton" layoutX="1175.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleVolverButton" text="Volver" />
    <Button fx:id="siguienteButton" text="Siguiente" onAction="#handleSiguienteButton" />
</VBox>