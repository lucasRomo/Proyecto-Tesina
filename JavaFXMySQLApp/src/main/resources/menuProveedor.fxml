<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ProveedorController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@imagenes/Logo_no_bg.png" />
        </image>
    </ImageView>

    <Label alignment="CENTER" styleClass="titulo-principal" text="Menú Proveedores" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
        <font>
            <Font name="System Bold" size="34.0" />
        </font>
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
    </Label>

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="110.0">

        <children>
            <TableView fx:id="proveedoresTableView" editable="true" prefHeight="90.0" prefWidth="903.0" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idProveedorColumn" prefWidth="55.0" text="ID" />
                    <TableColumn fx:id="nombreColumn" prefWidth="319.0" text="Nombre" />
                    <TableColumn fx:id="contactoColumn" prefWidth="298.0" text="Contacto" />
                    <TableColumn fx:id="mailColumn" prefWidth="300.0" text="Email" />
                    <TableColumn fx:id="estadoColumn" prefWidth="235.0" text="Estado" />
                    <TableColumn fx:id="tipoProveedorColumn" prefWidth="252.0" text="Tipo Proveedor" />
                    <TableColumn fx:id="accionColumn" prefWidth="239.0" styleClass="columna-boton-direccion" text="Dirección" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <TextField fx:id="filterField" prefHeight="25.0" prefWidth="200.0" promptText="Buscar por nombre, contacto o mail..." HBox.hgrow="ALWAYS" />
                    <Label styleClass="label-blanco" text="Estado:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ChoiceBox fx:id="estadoChoiceBox" prefWidth="150.0" />
                    <Label styleClass="label-blanco" text="Tipo:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ChoiceBox fx:id="tipoProveedorChoiceBox" prefWidth="150.0" />
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <Button fx:id="nuevoProveedorButton" mnemonicParsing="false" onAction="#handleRegistrarProveedorButton" text="Registrar Proveedor" textFill="#111111" />
                    <Button fx:id="modificarProveedorButton" mnemonicParsing="false" onAction="#handleModificarProveedorButton" text="Modificar Proveedor" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshButton" text="Refrescar" />
                    <Button fx:id="volverButton" mnemonicParsing="false" onAction="#handleVolverButton" styleClass="button-volver" text="Volver" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </padding>
    </VBox>

    <Button fx:id="helpButton" onAction="#handleHelpButton" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
        <graphic>
            <Text fill="#007bff" text="  ? " wrappingWidth="26.8837890625">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>

</AnchorPane>
