<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroCategoriaController">
    <stylesheets>
        <URL value="@styleRegistro.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <Label prefHeight="56.0" prefWidth="541.0" styleClass="titulo-principal" text="Registrar Nueva Categoría">
            <font>
                <Font name="System Bold" size="10.0" />
            </font>
        </Label>

        <Label text="Nombre de la Categoría (*):" />
        <TextField fx:id="txtNombre" promptText="Ej: Tarjetas Personales, Folletos, Lonas..." />

        <Label text="Descripción (opcional):" />
        <TextField fx:id="txtDescripcion" promptText="Descripción detallada de la categoría" />

        <Separator />

        <Label fx:id="lblMensajeError" minHeight="30.0" styleClass="label-error" text="" wrapText="true" />

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleRegistrar" prefHeight="32.0" prefWidth="101.0" styleClass="button-success" text="Guardar" />
            <Button onAction="#handleCancelar" styleClass="cancel-button" text="Cancelar" />
        </HBox>
    </VBox>

    <Button fx:id="helpButton" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
        <graphic>
            <Text fill="#007bff" text="  ? " wrappingWidth="26.8837890625">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>

</AnchorPane>
