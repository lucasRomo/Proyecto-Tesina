<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.HistorialActividadController">
   <center>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Historial de Actividad del Sistema">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TableView fx:id="historialTableView" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="fechaModificacionColumn" minWidth="150.0" prefWidth="150.0" text="Fecha y Hora" />
                  <TableColumn fx:id="nombreUsuarioColumn" minWidth="150.0" prefWidth="180.0" text="Usuario Responsable" />
                  <TableColumn fx:id="tablaAfectadaColumn" minWidth="100.0" prefWidth="120.0" text="Tabla Afectada" />
                  <TableColumn fx:id="columnaAfectadaColumn" minWidth="100.0" prefWidth="120.0" text="Columna Afectada" />
                  <TableColumn fx:id="idRegistroModificadoColumn" minWidth="100.0" prefWidth="150.0" text="ID Registro Modificado" />
                  <TableColumn fx:id="datoPrevioColumn" minWidth="150.0" prefWidth="250.0" text="Dato Previo" />
                  <TableColumn fx:id="datoModificadoColumn" minWidth="150.0" prefWidth="250.0" text="Dato Modificado" />
               </columns>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Button onAction="#handleVolverButtonHistorial" styleClass="secondary-button" text="Volver" />
         </children>
         <padding>
            <Insets bottom="10.0" right="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
