<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1000.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.IniciodeSesionController">
    <stylesheets>
        <URL value="@inicio.css" />
    </stylesheets>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@imagenes/Logo_no_bg.png" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" maxWidth="500.0" prefWidth="500.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label styleClass="titulo-principal" text="Inicio de Sesi칩n">
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>

        <Label styleClass="label-blanco" text="Usuario:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TextField fx:id="UsuarioField" maxWidth="300.0" promptText="Ingrese su Usuario" styleClass="input-negro">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <Label styleClass="label-blanco" text="Contrase침a:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <StackPane maxWidth="300.0">
            <PasswordField fx:id="ContraseniaField" maxWidth="300.0" promptText="Ingrese su Contrase침a" styleClass="input-negro" visible="true">
                <font>
                    <Font size="14.0" />
                </font>
                <StackPane.margin>
                    <Insets />
                </StackPane.margin>
            </PasswordField>

            <TextField fx:id="ContraseniaVisibleField" maxWidth="300.0" promptText="Ingrese su Contrase침a" styleClass="input-negro" visible="false">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>

            <ToggleButton fx:id="toggleVisibilityButton" maxHeight="25.0" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent; -fx-padding: 0;" StackPane.alignment="CENTER_RIGHT">
                <graphic>
                    <ImageView fx:id="eyeIconView" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@imagenes/ojo (1).png" />
                        </image>
                    </ImageView>
                </graphic>
                <StackPane.margin>
                    <Insets right="5.0" />
                </StackPane.margin>
            </ToggleButton>
        </StackPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#IniciarSesion" text="Iniciar Sesion">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button fx:id="volverButton" onAction="#handleVolverButton" styleClass="button-volver" text="Volver">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>

    </VBox>

    <Button fx:id="helpButton" onAction="#handleHelpButton" prefHeight="28.0" prefWidth="28.0" styleClass="help-button" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <graphic>
            <Text fill="#007bff" text="?">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>
</AnchorPane>