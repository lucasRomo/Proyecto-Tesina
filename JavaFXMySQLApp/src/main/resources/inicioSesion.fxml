<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1000.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.IniciodeSesionController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@imagenes/Logo_no_bg.png" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="500.0" maxWidth="500.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Inicio de Sesi칩n" styleClass="titulo-principal">
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>

        <Label text="Usuario:" styleClass="label-blanco">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TextField fx:id="UsuarioField" maxWidth="300.0" promptText="Ingrese su Usuario">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <Label text="Contrase침a:" styleClass="label-blanco">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <StackPane maxWidth="300.0">
            <PasswordField fx:id="ContraseniaField" maxWidth="300.0" promptText="Ingrese su Contrase침a" visible="true">
                <font>
                    <Font size="14.0" />
                </font>
            </PasswordField>

            <TextField fx:id="ContraseniaVisibleField" maxWidth="300.0" promptText="Ingrese su Contrase침a" visible="false">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>

            <ToggleButton fx:id="toggleVisibilityButton" onAction="#togglePasswordVisibility"
                          style="-fx-background-color: transparent; -fx-padding: 0;"
                          StackPane.alignment="CENTER_RIGHT"
                          maxHeight="25.0">
                <graphic>
                    <ImageView fx:id="eyeIconView" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@imagenes/ojo (1).png" />
                        </image>
                    </ImageView>
                </graphic>
                <StackPane.margin>
                    <Insets right="5.0" />
                </StackPane.margin>
            </ToggleButton>
        </StackPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#IniciarSesion" text="Iniciar Sesion">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button fx:id="volverButton" onAction="#handleVolverButton" text="Volver" styleClass="button-volver">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>

    </VBox>
</AnchorPane>