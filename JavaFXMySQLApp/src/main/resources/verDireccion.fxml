<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.VerDireccionController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Dirección del Cliente">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <children>
                <Label text="Calle:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="calleTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="editable-field"/>

                <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="numeroTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="editable-field"/>

                <Label text="Piso y Depto:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <TextField fx:id="pisoTextField" disable="true" promptText="Piso" HBox.hgrow="ALWAYS" styleClass="editable-field"/>
                        <TextField fx:id="deptoTextField" disable="true" promptText="Depto" HBox.hgrow="ALWAYS" styleClass="editable-field"/>
                    </children>
                </HBox>

                <Label text="Código Postal:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="codigoPostalTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="editable-field"/>

                <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="ciudadTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="editable-field"/>

                <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="provinciaTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="editable-field"/>

                <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="6">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="paisTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="editable-field"/>

            </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="modificarButton" onAction="#handleModificar" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Modificar" />
                <Button fx:id="guardarButton" onAction="#handleGuardarCambios" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar Cambios" />
                <Button fx:id="cancelarButton" onAction="#handleCancelar" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancelar" />
            </children>
        </HBox>
    </children>
</VBox>
