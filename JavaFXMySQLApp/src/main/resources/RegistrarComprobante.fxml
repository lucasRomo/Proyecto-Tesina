<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="750.0" spacing="15.0" style="-fx-background-color: #f8f8f8; -fx-border-color: #ccc; -fx-border-width: 1; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistrarComprobanteController">
    <children>
        <Label style="-fx-text-fill: #333;" text="Cerrar y Registrar Pago" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" top="10.0" />
            </VBox.margin>
        </Label>

        <!-- Sección de ID del Pedido y Cliente -->
        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="700.0" spacing="30.0">
            <children>
                <HBox spacing="10.0">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Pedido N°:" />
                    <Label fx:id="lblIdPedido" style="-fx-font-weight: bold; -fx-text-fill: #007bff; -fx-font-size: 14px;" text="000" />
                </HBox>
                <HBox spacing="10.0">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Cliente:" />
                    <Label fx:id="lblNombreCliente" style="-fx-font-weight: normal; -fx-text-fill: #333; -fx-font-size: 14px;" text="Nombre del Cliente" />
                </HBox>
            </children>
            <padding>
                <Insets left="25.0" />
            </padding>
        </HBox>

        <!-- Tabla de Detalles del Pedido -->
        <TableView fx:id="detallesTable" editable="true" prefHeight="200.0" prefWidth="700.0">
            <columns>
                <TableColumn prefWidth="300.0" text="Descripción / Anotación">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombreProducto" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100.0" text="Precio Unitario">
                    <cellValueFactory>
                        <PropertyValueFactory property="precioUnitario" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100.0" text="Cantidad">
                    <cellValueFactory>
                        <PropertyValueFactory property="cantidad" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100.0" text="Subtotal">
                    <cellValueFactory>
                        <PropertyValueFactory property="subtotal" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="accionColumn" prefWidth="50.0" text="Acción" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Sección para Agregar Nuevo Producto/Servicio (Manual) -->
        <GridPane hgap="10.0" style="-fx-background-color: #e0f7fa; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="txtDescripcion" promptText="Descripción: Ej. Hoja A4 D/F B/N" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtPrecioUnitarioManual" promptText="Precio U." GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="txtCantidad" promptText="Cantidad" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Button onAction="#handleAgregarProducto" prefWidth="100.0" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Añadir" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            </children>
        </GridPane>

        <!-- Contenedor principal de Pago (Dividido en dos columnas) -->
        <HBox alignment="TOP_CENTER" spacing="20.0">

            <!-- Columna Izquierda: Resumen de Cuenta -->
            <GridPane hgap="10.0" prefWidth="350.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" halignment="RIGHT" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label style="-fx-text-fill: #6c757d;" text="Monto Total (Deuda Original):" />
                    <Label fx:id="lblMontoTotal" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 16px;" text="\$0.00" GridPane.columnIndex="1" />

                    <Label style="-fx-text-fill: #6c757d;" text="Monto Anticipado Previo:" GridPane.rowIndex="1" />
                    <Label fx:id="lblMontoAnticipado" style="-fx-font-weight: normal; -fx-text-fill: #28a745; -fx-font-size: 14px;" text="\$0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #dc3545;" text="Pendiente Final (Nuevo Total):" GridPane.rowIndex="2" />
                    <Label fx:id="lblMontoPendiente" style="-fx-font-weight: bold; -fx-text-fill: #dc3545; -fx-font-size: 16px;" text="\$0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </children>
            </GridPane>

            <!-- Columna Derecha: Campos de Pago Final -->
            <VBox alignment="TOP_CENTER" prefWidth="350.0" spacing="10.0">
                <!-- Campos de Pago Final (GridPane) -->
                <GridPane hgap="10.0" prefHeight="100.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Monto Recibido:" />
                        <TextField fx:id="txtMontoRecibido" onKeyReleased="#calcularCambio" promptText="Ej: 1500.00" GridPane.columnIndex="1" />
                        <Label style="-fx-font-weight: bold;" text="Método de Pago:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="cbMetodoPago" prefWidth="250.0" promptText="Seleccionar..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <!-- Cambio y Mensaje -->
                <VBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #6c757d;" text="Cambio a Devolver:" />
                        <Label fx:id="lblCambio" style="-fx-font-weight: bold; -fx-text-fill: #007bff; -fx-font-size: 20px;" text="\$0.00" />
                    </children>
                </VBox>
            </VBox>
        </HBox>

        <!-- Botones de Acción -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button onAction="#handleGenerarComprobante" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" text="Cerrar Pedido y Retirar" />
                <Button onAction="#handleCancelar" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" text="Cancelar" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
        <Label fx:id="lblMensajeError" alignment="CENTER" prefHeight="17.0" prefWidth="300.0" style="-fx-text-fill: #dc3545;" textAlignment="CENTER" />
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
