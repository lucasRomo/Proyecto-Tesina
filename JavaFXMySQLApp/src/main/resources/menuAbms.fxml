<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:id="menuPrincipal" prefHeight="1000.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MenuController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@imagenes/Logo_no_bg.png" />
        </image>
    </ImageView>

    <Button fx:id="helpButton" onAction="#handleHelpButton" prefHeight="28.0" prefWidth="28.0" styleClass="help-button"
            AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <graphic>
            <Text fill="#007bff" text="?">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
        </graphic>
    </Button>
    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Bienvenido Empleado" styleClass="titulo-principal">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="10.0" prefWidth="250.0" maxWidth="250.0">
            <Button styleClass="button" onAction="#handlePedidosButton" prefWidth="200.0" text="Pedidos" />
            <Button styleClass="button" onAction="#handleClientesButton" prefWidth="200.0" text="Cliente" />
            <Button styleClass="button" onAction="#handleStockabm" prefWidth="200.0" text="Stock" />
            <Button styleClass="button" onAction="#handleOpcionesDeAdminButton" prefWidth="200.0" text="Admin" />
        </VBox>
    </VBox>

    <Button fx:id="volverButton" mnemonicParsing="false" onAction="#handleVolverButtonAbms" text="Cerrar sesion"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />

</AnchorPane>